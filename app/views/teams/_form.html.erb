<%= form_for [@buyer, @team], remote: true do |f| %>
  <div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle"><%= @team.name.present? ? 'Edit' : 'Add'%> Team</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <div id="error_explanation"></div>
    <%= hidden_field_tag 'team[buyer_id]', @buyer.id%>
    <div class="form-group row">
      <label for="name" class="col-sm-4 col-form-label">Name</label>
      <%= f.text_field :name, class: 'text-box-width' %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
    <%= f.submit 'Save', class: "btn btn-success btn-sm"%>
  </div>
<% end %>
